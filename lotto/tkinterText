def printName(event):
    print('Hello Worldy')

button_1 = Button(root, text='Print my name')
button_1.bind("<Button-1>", printName)
button_1.pack()


def printName():
    print('Hello Worldy')

button_1 = Button(root, text='Print my name', command=printName)
button_1.pack()
